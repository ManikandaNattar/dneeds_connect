<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="20dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight="0.15"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/about"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:textStyle="bold"

                    android:text="New Service Request !!!"
                    android:textSize="18dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/newServiceTV"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="You have Received the new service request !!"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/serUserName"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/serName"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="Service name"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/distancetxt"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="Distance : "
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/distancevalue"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="45 km"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/durationtxt"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="Time to Reach You : "
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/durationvalue"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="1 hour 1 min"
                    android:textSize="15dp"/>

            </LinearLayout>





            <LinearLayout
                android:id="@+id/buttonLT"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <Button
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:id="@+id/declineBtn"
                    android:layout_width="0dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="30dp"
                    android:text="Decline"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />

                <Button
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:id="@+id/acceptBtn"
                    android:layout_width="0dp"
                    android:background="@color/green"
                    android:layout_height="30dp"
                    android:text="Accept"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:hint="Accept"/>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>