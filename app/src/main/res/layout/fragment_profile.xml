<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"

    tools:context=".Fragment.ProfileFrag">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_margin="20dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <FrameLayout


                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white">



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="top"
                        android:layout_marginLeft="110dp"
                        android:layout_marginRight="100dp"
                        android:id="@+id/imgProfile"

                        android:background="@drawable/whiteborder"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginBottom="6dp"
                        android:src="@drawable/human"/>


                    <ImageView
                        android:id="@+id/profileIV"
                        android:layout_marginTop="45dp"
                        android:layout_width="42dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:layout_marginLeft="189dp"
                        android:layout_marginRight="157dp"
                        android:layout_marginBottom="25dp"
                        android:src="@drawable/redcircle"/>

                    <ImageView
                        android:layout_marginTop="52dp"
                        android:layout_width="17dp"
                        android:layout_height="14dp"
                        android:layout_gravity="top"
                        android:layout_marginLeft="200dp"
                        android:layout_marginRight="165dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/ic_baseline_add_photo_alternate_24"/>


                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    style="@style/textview"/>

                <EditText
                    android:id="@+id/nameEdt"
                    android:background="@drawable/redborder"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    style="@style/textview"/>

                <EditText
                    android:id="@+id/emailEdt"
                    android:background="@drawable/redborder"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vendor id"
                    style="@style/textview"/>

                <EditText

                    android:id="@+id/vidEdt"
                    android:inputType="number"
                    android:maxLength="20"
                    android:text=" "
                    android:background="@drawable/redborder"
                    style="@style/edittext"

                    android:layout_width="match_parent"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    style="@style/textview"/>

                <EditText

                    android:id="@+id/poneEdt"
                    android:inputType="number"
                    android:maxLength="10"
                    android:background="@drawable/redborder"
                    style="@style/edittext"

                    android:layout_width="match_parent"

                    />

           <!--     <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    style="@style/textview"/>

                <EditText
                    android:id="@+id/passwordEdt"
                    android:background="@drawable/redborder"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        style="@style/textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address 1" />

                    <ImageView
                        android:id="@+id/locationgps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_gps"
                        android:visibility="gone"
                        />
                    <EditText
                        android:id="@+id/addr1Edt"
                        android:background="@drawable/redborder"
                        style="@style/edittext"
                        android:layout_width="match_parent"
                        />
                </LinearLayout>


                <TextView
                    style="@style/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address 2" />

                <EditText
                    android:id="@+id/addr2Edt"
                    android:background="@drawable/redborder"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    style="@style/textview"/>

                <EditText
                    android:id="@+id/cityEdt"
                    android:background="@drawable/redborder"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State"
                    style="@style/textview"/>

                <EditText
                    android:id="@+id/stateEdt"
                    android:background="@drawable/redborder"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pincode"
                    style="@style/textview"/>

                <EditText
                    android:id="@+id/pincodeEdt"
                    android:inputType="number"
                    android:maxLength="6"
                    android:background="@drawable/redborder"
                    style="@style/edittext"
                    android:layout_width="match_parent"
                    />

                <LinearLayout
                    android:id="@+id/updateLT"
                    android:layout_width="300dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/rounded_button"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Update"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>


    </androidx.cardview.widget.CardView>



</LinearLayout>