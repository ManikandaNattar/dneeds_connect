<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Signupaddress">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/arrow_for_back"
            android:layout_width="30dp"
            android:layout_height="25dp"/>


        <ImageView

            android:id="@+id/gps"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="420dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:src="@drawable/ic_gps" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#595858"
        android:text="Signup"
        />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:src="@drawable/rounded_button"/>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/companyEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@android:color/transparent"
                android:hint="Company name"
                android:nextFocusDown="@id/signAddr2"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/gradient_2"
                android:textColorHint="#72595858"
                android:textSize="21dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />



            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/gstNumberEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@android:color/transparent"
                android:hint="GST Number"
                android:nextFocusDown="@id/signcity"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/gradient_2"
                android:textColorHint="#72595858"
                android:textSize="21dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signAddr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@android:color/transparent"
                android:hint="Address 1"
                android:nextFocusDown="@id/signcity"
                android:imeOptions="actionNext"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/gradient_2"
                android:textColorHint="#72595858"
                android:textSize="21dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signAddr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@android:color/transparent"
                android:hint="Address 2"
                android:nextFocusDown="@id/signcity"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/gradient_2"
                android:textColorHint="#72595858"
                android:textSize="21dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />
            <!--<EditText
                android:id="@+id/email"
                android:textColor="#72595858"
                android:maxLines="1"
                android:background="@android:color/transparent"
