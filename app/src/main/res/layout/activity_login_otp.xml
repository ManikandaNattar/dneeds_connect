<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.LoginOtp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_my_orders"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginTop="13dp"
            android:layout_weight=".3"
            android:src="@drawable/white_back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11sp"
            android:layout_weight="2"
            android:text="Login"
            android:textColor="#E6FFFFFF"
            android:textSize="19sp" />
    </LinearLayout>


    <TextView
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:hint=" We texted you a code to"
        android:gravity="center"/>


    <TextView
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:hint="verify your phone number"
        android:gravity="center"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:weightSum="5"
        android:orientation="horizontal">

        <EditText
            android:layout_margin="5dp"
            android:layout_weight="0.8"
            android:id="@+id/edt1"
            android:maxLength="1"
            android:singleLine="true"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/whitebackground"
            android:gravity="center"
            android:imeOptions="actionNext"
            tools:ignore="NestedWeights"/>


        <EditText
            android:layout_margin="5dp"
            android:layout_weight="0.8"
            android:id="@+id/edt2"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/whitebackground"/>

        <EditText
            android:layout_margin="5dp"
            android:maxLength="1"
            android:layout_weight="0.8"
            android:id="@+id/edt3"
            android:inputType="number"
            android:layout_width="0dp"
            android:singleLine="true"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:layout_height="match_parent"
            android:background="@drawable/whitebackground"/>


        <EditText
            android:layout_margin="5dp"
            android:layout_weight="0.8"
            android:id="@+id/edt4"
            android:maxLength="1"
            android:layout_width="0dp"
            android:singleLine="true"
            android:inputType="number"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:layout_height="match_parent"
            android:background="@drawable/whitebackground"/>

        <EditText
            android:layout_margin="5dp"
            android:layout_weight="0.8"
            android:id="@+id/edt5"
            android:maxLength="1"
            android:layout_width="0dp"
            android:inputType="number"
            android:singleLine="true"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:layout_height="match_parent"
            android:background="@drawable/whitebackground"/>

        <EditText
            android:layout_margin="5dp"
            android:layout_weight="0.8"
            android:maxLength="1"
            android:id="@+id/edt6"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/whitebackground"/>





    </LinearLayout>

    <TextView
        android:id="@+id/notreceivetv"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:hint="I did not receive a code"
        android:gravity="center"/>

    <TextView
        android:id="@+id/timertv"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:hint="00:29"
        android:textColor="@color/colorPrimary"
        android:gravity="center"/>

    <TextView
        android:id="@+id/resendtv"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:hint="RESEND"
        android:textColorHint="@color/colorPrimary"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/LoginBtn"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="LOGIN "
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>