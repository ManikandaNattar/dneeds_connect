<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ChangePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Back"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginTop="13dp"
            android:layout_weight=".3"
            android:src="@drawable/white_back_arrow" />

        <TextView
            android:id="@+id/headertitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11sp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!--  <ImageView

              android:id="@+id/trackgps"
             android:layout_margin="15dp"
              android:src="@drawable/ic_gps"
              android:layout_width="25dp"
              android:layout_height="25dp"/>-->
    </LinearLayout>

    <TextView
        android:id="@+id/headertitle"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Change Your Password"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

<LinearLayout
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16dp"
        style="@style/textview"/>

    <EditText
        android:id="@+id/emailPassEDT"
        android:background="@drawable/redborder"
        style="@style/edittext"
        android:hint="Enter your Email ID"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Password"
        style="@style/textview"/>

    <EditText
        android:id="@+id/newPassEdt"
        android:background="@drawable/redborder"
        style="@style/edittext"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:hint="Enter new password"
        android:layout_width="match_parent"
        />


    <TextView
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirom Password"
        style="@style/textview"/>

    <EditText
        android:id="@+id/confiromPassEdt"
        android:background="@drawable/redborder"
        style="@style/edittext"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:hint="Confirm new password"
        android:layout_width="match_parent"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/SubmitLT"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>