<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddServiceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/parentLT">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Back"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginTop="13dp"
            android:layout_weight=".3"
            android:src="@drawable/white_back_arrow" />

        <TextView
            android:id="@+id/headertitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_weight="2"
            android:text="Service"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Category"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="left"/>
        <Spinner
            android:id="@+id/catSpinner"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:tag="select category"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/subCatLT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select SubCategory"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="left"/>

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/subcatSpinner"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="select category"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/SerLT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Services"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="left"/>
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/serviceSpinner"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/SubServLT">

    <TextView
        android:id="@+id/subserviceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Sub Services"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="left"/>

<androidx.recyclerview.widget.RecyclerView
    android:layout_margin="20dp"
    android:layout_marginLeft="40dp"
    android:id="@+id/subserRecycle"
    android:layout_width="match_parent"
    android:layout_height="140dp"/>

    </LinearLayout>



    </LinearLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="20dp"

            android:id="@+id/addServiceLT"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity=""
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Service"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>




</RelativeLayout>